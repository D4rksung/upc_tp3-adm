@using PetCenter.Referencias.Presentacion.Web.Resources
@using PetCenter.Referencias.Presentacion.Web.Helpers.Html
@model PetCenter.Referencias.Presentacion.Web.Models.Registros.Atencion.AtencionEditorModelo

<fieldset class="fieldset-filter">
    <legend class="text-muted h5">Datos de los Servicios</legend><table class="table table-striped table-bordered table-condensed asistencia-table-grid" id="tab-servicios">
        <thead>
            <tr class="asistencia-head">
                <th scope="col">Descripción</th>
                <th scope="col">Cantidad</th>
                <th scope="col">Precio</th>
                <th scope="col">Descuento</th>
                <th scope="col">Precio Neto</th>
                <th scope="col">Sel.</th>
            </tr>
        </thead>
        <tbody>

            @{
                foreach (var item in Model.Referencia.ListaReferenciaConvenioServicio)
                {
                    <tr>
                        <td class="asistencia-column-left">
                            @item.NombreServicio
                        </td>
                        <td class="asistencia-column-center">
                            @item.Cantidad
                        </td>
                        <td class="asistencia-column-righ">
                            @item.TarifaBase
                        </td>
                        <td class="asistencia-column-righ">
                            @item.Descuento
                        </td>
                        <td class="asistencia-column-righ">
                            @item.ValorNeto
                        </td>
                        <td class="asistencia-column-center">

                            @{
                                if (item.Atendida)
                                {  <a class="icon-Asistencia16-acc-view" title="Ver Atención" onclick="atencionjs.mostrarAtencion(@item.IdServicio, '@item.NombreServicio', true)" /> }
                                else
                                {  <a class="icon-Asistencia16-acc-liquidar" title="Asignar Atención" onclick="atencionjs.mostrarAtencion(@item.IdServicio, '@item.NombreServicio', false)" /> }
                            }

                        </td>
                    </tr>
                                }
            }



        </tbody>
    </table>
</fieldset>