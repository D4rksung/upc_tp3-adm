@using PetCenter.Referencias.Presentacion.Web.Resources
@using PetCenter.Referencias.Presentacion.Web.Helpers.Html
@model PetCenter.Referencias.Presentacion.Web.Models.Registros.Atencion.AtencionEditorModelo

@Html.HiddenFor(m => m.Servicio.IdServicio)

<fieldset class="fieldset-filter">
    <legend class="text-muted h5">Datos de la Atención</legend>
    <div class="form-group asistencia-group">
        @Html.Label("Servicio: ", new { @class = "col-sm-2 control-label form-label" })
        <div class="col-sm-5">
            @Html.TextBoxFor(m => m.Servicio.NombreServicio, new { @class = "form-control asistencia-requerido", @placeholder = "Nombre", @readonly = "readonly" })
        </div>
    </div>

    <div class="form-group asistencia-group">
        @Html.Label("Detalles: ", new { @class = "col-sm-2 control-label form-label" })
        <div class="col-sm-10">
            @Html.TextAreaFor(m => m.Atencion.Resultado, new { @class = "form-control asistencia-requerido", @placeholder = "Detalles", @required = "" })
        </div>
    </div>

    <div class="form-group asistencia-group">
        @Html.Label("Evidencia: ", new { @class = "col-sm-2 control-label form-label" })
        <div class="col-sm-10">
            <a class="control-label asistencia-puntero" id="archivoResultado"></a>
            @ColquisiriExtension.FileAmag(sufijo: "rs", tam: 12, tipo: "DOCUMENTO")
        </div>
    </div>
</fieldset>

<br />
<div class="asistencia-group">
    <div class="col-sm-12 text-center">
        <button type="button" id="Guardar" class="btn btn-primary">@Botones.BtnAceptar</button>
        @*<button class="btn btn-primary" type="button" onclick="location.href='@Url.Action("Index", "Atencion")'">@Botones.BtnCancelar</button>*@
        <button class="btn btn-primary" type="button" id="btnCancelar">@Botones.BtnCancelar</button>
    </div>
</div>

<script type="text/javascript" charset="utf-8">
    $(document).ready(function () {
        helperFilejs.iniciar({ sufijo: "rs", requerido: false });
    });
</script>