@using PetCenter.Referencias.Presentacion.Web.Resources
@using PetCenter.Referencias.Presentacion.Web.Helpers.Html
@model PetCenter.Referencias.Presentacion.Web.Models.Registros.Solicitud.SolicitudEditorModelo

<fieldset class="fieldset-filter">
    <legend class="text-muted h5">Adjuntar Documentos Sustentatorios</legend>

    <table class="table table-striped table-bordered table-condensed asistencia-table-grid" id="tabla-archivos">
        <tr>
            <td class='asistencia-column-left col-sm-2'>Recibo de Servicios</td>
            <td class='asistencia-column-center col-sm-8'>

                @if (Model.Solicitud.DocReciboObjeto != null)
                {
                    <a class="control-label asistencia-puntero" onclick="archivojs.descargaArchivo('@Url.Action("Descarga", "Solicitud", new { idSolicitud = Model.Solicitud.NroSolicitud, identificador = 1 })','#formSolicitud')">
                        @Model.Solicitud.DocReciboTitulo
                    </a>
                }
                @ColquisiriExtension.FileAmag(sufijo: "rs", tam: 12, tipo: "DOCUMENTO")
            </td>
        </tr>
        <tr>
            <td class='asistencia-column-left col-sm-2'>Constancia colegiatura veterinario</td>
            <td class='asistencia-column-center col-sm-8'>
                @if (Model.Solicitud.DocColegiaturaObjeto != null)
                {
                    <a class="control-label asistencia-puntero" onclick="archivojs.descargaArchivo('@Url.Action("Descarga", "Solicitud", new { idSolicitud = Model.Solicitud.NroSolicitud, identificador = 2 })','#formSolicitud')">
                        @Model.Solicitud.DocColegiaturaTitulo
                    </a>
                }
                @ColquisiriExtension.FileAmag(sufijo: "ccv", tam: 12, tipo: "DOCUMENTO")
            </td>
        </tr>
        <tr>
            <td class='asistencia-column-left col-sm-2'>Reporte SUNAT</td>
            <td class='asistencia-column-center col-sm-8'>
                @if (Model.Solicitud.DocSunatObjeto != null)
                {
                    <a class="control-label asistencia-puntero" onclick="archivojs.descargaArchivo('@Url.Action("Descarga", "Solicitud", new { idSolicitud = Model.Solicitud.NroSolicitud, identificador = 3 })','#formSolicitud')">
                        @Model.Solicitud.DocSunatTitulo
                    </a>
                }
                @ColquisiriExtension.FileAmag(sufijo: "rsu", tam: 12, tipo: "DOCUMENTO")
            </td>
        </tr>
        <tr>
            <td class='asistencia-column-left col-sm-2'>Licencia funcionamiento</td>
            <td class='asistencia-column-center col-sm-8'>
                @if (Model.Solicitud.DocLicenciaObjeto != null)
                {
                    <a class="control-label asistencia-puntero" onclick="archivojs.descargaArchivo('@Url.Action("Descarga", "Solicitud", new { idSolicitud = Model.Solicitud.NroSolicitud, identificador = 4 })','#formSolicitud')">
                        @Model.Solicitud.DocLicenciaTitulo
                    </a>
                }
                @ColquisiriExtension.FileAmag(sufijo: "lf", tam: 12, tipo: "DOCUMENTO")
            </td>
        </tr>
        <tr>
            <td class='asistencia-column-left col-sm-2'>Reporte de central de riesgo</td>
            <td class='asistencia-column-center col-sm-8'>
                @if (Model.Solicitud.DocCentralObjeto != null)
                {
                    <a class="control-label asistencia-puntero" onclick="archivojs.descargaArchivo('@Url.Action("Descarga", "Solicitud", new { idSolicitud = Model.Solicitud.NroSolicitud, identificador = 5 })','#formSolicitud')">
                        @Model.Solicitud.DocCentralTitulo
                    </a>
                }
                @ColquisiriExtension.FileAmag(sufijo: "rcr", tam: 12, tipo: "DOCUMENTO")
            </td>
        </tr>

    </table>


</fieldset>

<script type="text/javascript" charset="utf-8">
    $(document).ready(function () {
        helperFilejs.iniciar({ sufijo: "rs", requerido: false });
        helperFilejs.iniciar({ sufijo: "ccv", requerido: false });
        helperFilejs.iniciar({ sufijo: "rsu", requerido: false });
        helperFilejs.iniciar({ sufijo: "lf", requerido: false });
        helperFilejs.iniciar({ sufijo: "rcr", requerido: false });
    });
</script>